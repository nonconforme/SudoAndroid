<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "background shadow" -->


    <item android:top="@dimen/sds_btn_shadow_offset" android:right="@dimen/sds_btn_shadow_offset">
        <shape android:shape="rectangle">
            <solid android:color="@color/schat_item_text_shadow"/>

            <corners android:radius="@dimen/sds_btn_corner_radius"/>
        </shape>
    </item>
    <!-- background color -->
    <item android:bottom="@dimen/sds_btn_shadow_offset" android:left="@dimen/sds_btn_shadow_offset">

        <shape>
            <solid android:color="@color/schat_item_text_bg"/>
            <corners android:radius="@dimen/sds_btn_corner_radius"/>

        </shape>
    </item>


</layer-list>