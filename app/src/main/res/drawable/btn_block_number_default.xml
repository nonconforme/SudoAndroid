<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item  android:top="@dimen/sds_btn_shadow_offset">
        <shape android:shape="rectangle" >
            <solid android:color="@color/ss_btn_shadow"/>

            <corners android:radius="@dimen/sds_btn_corner_radius" />
        </shape>
    </item>
    <!-- background color -->
    <item   android:bottom="@dimen/sds_btn_shadow_offset">

        <shape>
            <solid android:color="@color/ss_btn_bloc_number_default" />
            <corners android:radius="@dimen/sds_btn_corner_radius" />

        </shape>
    </item>
</layer-list>