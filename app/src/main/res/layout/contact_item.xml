<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/SCContactsItemLLMainLayout"
    android:weightSum="1">


    <ImageView
        android:id="@+id/iwContactsAvatar"
        style="@style/SCContactsItemEVAvatar"
        android:layout_width="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/twContacstFirstName"

            style="@style/SCContactsItemTVName"
            android:text="@string/cont_first_name"
            android:gravity="right" />

        <TextView
            android:id="@+id/twContacstLastName"

            style="@style/SCContactsItemTVName"

            android:text="@string/cont_last_name" />

    </LinearLayout>

</LinearLayout>