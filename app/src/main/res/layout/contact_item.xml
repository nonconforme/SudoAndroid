<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SCContactsItemLLMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iwContactsAvatar"
        style="@style/SCContactsItemEVAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twContacstFirstName"
            style="@style/SCContactsItemTVName"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:text="@string/cont_first_name" />


    </LinearLayout>

</LinearLayout>