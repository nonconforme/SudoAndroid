<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/SCContactsItemLLMainLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <ImageView
            android:id="@+id/ivContactsAvatar"
            style="@style/SCContactsItemEVAvatar"
            android:layout_gravity="center"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="7">

        <TextView
                android:id="@+id/tvContacstFirstName"
                style="@style/SCContactsItemTVName"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:text="@string/cf_first_name"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>