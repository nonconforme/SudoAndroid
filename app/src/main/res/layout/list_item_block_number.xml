<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/SCContactsItemLLMainLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <ImageView
            android:id="@+id/ivContactsAvatar"
            style="@style/SCContactsItemEVAvatar"
            android:layout_gravity="center"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="7">

        <TextView
                android:id="@+id/tvContacstFirstName"
                style="@style/SCContactsItemTVName"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:text="@string/cf_first_name"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvContactNumber"
                style="@style/SCContactsNumber"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/test_phone_number"
                android:layout_weight="1"/>

    </LinearLayout>

    <CheckBox
            style="@style/CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/checkBox" android:layout_marginLeft="4dp"
            android:text=""
            android:visibility="visible"
           android:layout_weight="1.2"
            android:backgroundTintMode="src_over"
            android:enabled="true"/>


</LinearLayout>