<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/SNllStyle">

    <ImageView
            android:id="@+id/ivCountry_FN"
            style="@style/SNivCountryStyle"
            android:src="@drawable/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvInfo_FN"
            style="@style/SNtvCountryStyle"
            android:text="@string/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivCountry_FN"
        android:layout_toLeftOf="@+id/tvCredit_FN"
        android:layout_toStartOf="@+id/tvCredit_FN" />

    <TextView
            android:id="@+id/tvCredit_FN"
            style="@style/SNtvCreditStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>