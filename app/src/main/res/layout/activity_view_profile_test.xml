<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonioleiva.materialeverywhere.DetailActivity">

    <include
        android:id="@+id/profileViewToolBar"
        layout="@layout/toolbar_profile"
        />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/AVC_Detailes_SubItem_RL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUserFirstName_AVC"
                    style="@style/AVC_Detailes_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ivUser_AVP"
                    android:layout_toRightOf="@+id/ivUser_AVP"
                    android:text="@string/avc_default_name" />

                <TextView
                    android:id="@+id/tvUserSecondName_AVC"
                    style="@style/AVC_Detailes_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvUserFirstName_AVC"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/tvUserFirstName_AVC"
                    android:layout_below="@+id/tvUserFirstName_AVC"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/avc_default_name" />

                <ImageView
                    android:id="@+id/ivUser_AVP"
                    style="@style/AVC_Detailes_Subitem_Icon_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_person" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/AVC_Detailes_SubItem_RL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPhoneIcon_AVC"
                    style="@style/AVC_Detailes_Subitem_Icon_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_phone_number" />

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ivPhoneIcon_AVC"
                    android:layout_toRightOf="@+id/ivPhoneIcon_AVC" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image" />
</RelativeLayout>