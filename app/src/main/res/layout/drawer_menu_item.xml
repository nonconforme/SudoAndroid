<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rlDrawerMenuItem"
        xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/SNllStyle"
        >

    <ImageView
            android:id="@+id/ivIcon_Drawer"
            style="@style/DrawerMenuIcon"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/tvName_Drawer"
            style="@style/DrawerMenuItem"
            android:text="+380671321215"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/ivIcon_Drawer"
            android:layout_toEndOf="@+id/ivIcon_Drawer"/>
    <TextView
            style="@style/DrawerMenuItemParam"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tvParam_Drawer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignBottom="@+id/tvName_Drawer"/>
    <View
            android:id="@+id/blackLineDrawer"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF000000"
            android:visibility="invisible"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>