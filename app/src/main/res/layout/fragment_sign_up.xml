<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_floating_material_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImage_FSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        style="@style/SLivImageStyle"
        android:layout_above="@+id/etEmail_FSU"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etEmail_FSU"
        style="@style/SLetEmailStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassword_FSU"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etPassword_FSU"
        style="@style/SLetPasswordStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etConfirmPassword_FSU"
        style="@style/SRetConfirmPasswordStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword_FSU"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSignUp_FSU"
        style="@style/SLbtnSignUpStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/etConfirmPassword_FSU"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>