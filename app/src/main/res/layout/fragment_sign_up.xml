<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sudo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.thinkmobiles.sudo.custom_views.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frEmail"
        sudo:floatLabelTextAppearance="@style/TextAppearance.Sudo.FloatLabel"
        android:layout_above="@+id/frPass"
        android:layout_alignRight="@+id/frPass"
        android:layout_alignEnd="@+id/frPass"
        android:layout_alignLeft="@+id/frPass"
        android:layout_alignStart="@+id/frPass">
        <EditText
            style="@style/ETLoginStyle"
            android:id="@+id/etEmail_FSU"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sl_et_email_hint"
            android:layout_alignTop="@+id/frEmail"
/>
    </com.thinkmobiles.sudo.custom_views.FloatLabelLayout>

    <com.thinkmobiles.sudo.custom_views.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frPass"
        sudo:floatLabelTextAppearance="@style/TextAppearance.Sudo.FloatLabel"
        android:layout_above="@+id/frConfirmPass"
        android:layout_alignRight="@+id/frConfirmPass"
        android:layout_alignEnd="@+id/frConfirmPass"
        android:layout_alignLeft="@+id/frConfirmPass"
        android:layout_alignStart="@+id/frConfirmPass">

        <EditText
            style="@style/ETLoginStyle"
            android:id="@+id/etPassword_FSU"
            android:hint="@string/sl_et_password_hint"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail_FSU"
/>
    </com.thinkmobiles.sudo.custom_views.FloatLabelLayout>

    <com.thinkmobiles.sudo.custom_views.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frConfirmPass"
        sudo:floatLabelTextAppearance="@style/TextAppearance.Sudo.FloatLabel"
        android:layout_above="@+id/btnSignUp_FSU"
        android:layout_alignLeft="@+id/btnSignUp_FSU"
        android:layout_alignStart="@+id/btnSignUp_FSU"
        android:layout_alignRight="@+id/btnSignUp_FSU"
        android:layout_alignEnd="@+id/btnSignUp_FSU">

        <EditText
            style="@style/ETLoginStyle"
            android:id="@+id/etConfirmPassword_FSU"
            android:hint="@string/sr_et_confirm_password_hint"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSignUp_FSU"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </com.thinkmobiles.sudo.custom_views.FloatLabelLayout>

    <Button
        android:id="@+id/btnSignUp_FSU"
        style="@style/SLbtnSignUpStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />



</RelativeLayout>