<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_floating_material_light">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lvChatList" android:layout_gravity="center_horizontal"
            android:layout_above="@+id/etMessage"
            android:choiceMode="none"
            android:stackFromBottom="true"
            android:transcriptMode="normal" android:layout_below="@+id/toolbar"

            android:dividerHeight="1dp"
            android:divider="@color/sn_list_devider_color"/>
    <EditText
            style="@style/SChatItemET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/compose_message_hint"


            android:id="@+id/etMessage" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnSend" android:layout_toStartOf="@+id/btnSend"
            />
    <Button
            style="@style/SChatBtnSend"
            android:layout_width="wrap_content"
            android:text="@string/message_send"
            android:id="@+id/btnSend"
            android:background="@drawable/selector_btn_send" android:layout_alignTop="@+id/etMessage"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
</RelativeLayout>