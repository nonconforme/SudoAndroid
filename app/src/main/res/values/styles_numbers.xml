<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DIMENS -->
    <dimen name="sn_text_size_cred">18dp</dimen>
    <dimen name="sn_text_size_buy">16dp</dimen>
    <dimen name="sn_text_size_country">18dp</dimen>
    <dimen name="sn_text_size_number">18dp</dimen>
    <dimen name="sn_margin">0dp</dimen>
    <dimen name="sn_padding">16dp</dimen>
    <dimen name="sn_list_devider_height">2dp</dimen>
    <dimen name="sn_item_bg_corner_radius">2dp</dimen>
    <dimen name="sn_item_stroke">2dp</dimen>
    <dimen name="sn_list_padding_lr">2dp</dimen>
    <dimen name="sn_item_bg_get_btn_corner_radius">5dp</dimen>
    <dimen name="sn_item_bg_get_btn_stroke">1dp</dimen>
    <dimen name="sn_item_bg_get_btn_padding">8dp</dimen>
    <dimen name="sn_drawer_country_icon_size">64dp</dimen>
    <dimen name="sn_dawer_number_list_padding">2dp</dimen>
    <dimen name="sn_available_fragment_text_size">16dp</dimen>
    <dimen name="sn_available_fragment_margin_lr">8dp</dimen>

    <dimen name="block_item_container_padding">32dp</dimen>
    <!-- end region -->

    <!-- COLORS -->
    <color name="sn_list_devider_color">#dfdfdf</color>
    <color name="sn_item_bg_shadow_color">#d7d7d7</color>
    <color name="sn_available_fragment_text_color">#e8cc4c</color>
    <!-- end region -->

    <!-- STYLES -->
    <style name="SNivCountryStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/sn_margin</item>
        <item name="android:layout_height">@dimen/sn_drawer_country_icon_size</item>
        <item name="android:layout_width">@dimen/sn_drawer_country_icon_size</item>
    </style>

    <style name="SNtvCountryStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sn_text_size_country</item>
        <item name="android:padding">@dimen/sn_padding</item>

    </style>

    <style name="SNtvNumberStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sn_text_size_number</item>
        <item name="android:padding">@dimen/sn_padding</item>

    </style>
    <style name="SNtvBuyStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sn_text_size_buy</item>
        <item name="android:padding">@dimen/sn_padding</item>

    </style>

    <style name="SNtvCreditStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sn_text_size_cred</item>
        <item name="android:padding">@dimen/sn_item_bg_get_btn_padding</item>
        <item name="android:background">@drawable/bg_numbers_tv_get</item>

    </style>
    <!-- end region -->
    <style name="SNllStyle">
        <item name="android:padding">@dimen/sn_dawer_number_list_padding</item>


    </style>


    <style name="SNList">
        <item name="android:dividerHeight">@dimen/sn_list_devider_height</item>
        <item name="android:divider">@color/sn_list_devider_color</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/sn_list_padding_lr</item>
        <item name="android:paddingRight">@dimen/sn_list_padding_lr</item>
    </style>

    <style name="SNAvailableCreditsFR_Frame">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="SNAvailableCreditsFR_DetailesTV">
         <item name="android:layout_marginLeft">@dimen/sn_available_fragment_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/sn_available_fragment_margin_lr</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sn_available_fragment_text_size</item>

    </style>
    <style name="SNAvailableCreditsFR_CreditsTV">
        <item name="android:layout_marginLeft">@dimen/sn_available_fragment_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/sn_available_fragment_margin_lr</item>
        <item name="android:textColor">@color/sn_available_fragment_text_color </item>
        <item name="android:textSize">@dimen/sn_available_fragment_text_size</item>

    </style>

    <style name="BlockNumberItemLLMainLayout">
        <item name="android:background">@android:color/white</item>


    </style>
</resources>