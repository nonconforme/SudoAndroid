<?xml version="1.0" encoding="utf-8"?>
<resources>



    <!-- DIMENS -->
    <dimen name="schat_icons_margin">2dp</dimen>
    <dimen name="schat_avatar_size">48dp</dimen>
    <dimen name="schat_margin_top_bottom">12dp</dimen>
    <dimen name="schat_margin_left_right">12dp</dimen>
    <dimen name="schat_margin_view_details_left">40dp</dimen>
    <dimen name="schat_padding">1dp</dimen>
    <dimen name="schat_padding_left_right">4dp</dimen>
    <dimen name="schat_view_detailes_padding">10dp</dimen>
    <dimen name="schat_text_size">16dp</dimen>
    <dimen name="schat_details_text_size">14dp</dimen>
    <dimen name="schat_small_text_size">12dp</dimen>
    <dimen name="schat_item_icon_size">18dp</dimen>


    <!-- end region -->

    <!-- COLORS -->
    <color name="schat_view_details_color">@android:color/holo_blue_dark</color>
    <color name="schat_phone_number_color">@android:color/darker_gray</color>


    <!-- end region -->

    <!-- STYLES -->
    <style name="SChatItemLLMainLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/schat_padding</item>
        <item name="android:paddingBottom">@dimen/schat_padding</item>
    </style>



    <style name="SChatItemEVAvatar">
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:layout_width">@dimen/schat_avatar_size</item>
        <item name="android:layout_height">@dimen/schat_avatar_size</item>
        <item name="android:layout_marginLeft">@dimen/schat_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/schat_margin_left_right</item>
    </style>

    <style name="SChatItemTVName">
        <item name="android:textColor">@android:color/black</item>

        <item name="android:textSize">@dimen/schat_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SChatItemTVNumber">

        <item name="android:textSize">@dimen/schat_details_text_size</item>
        <item name="android:textColor">@color/schat_phone_number_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SChatItemTVMessagePreview">

        <item name="android:textSize">@dimen/schat_details_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="SChatItemTVViewDetails">

        <item name="android:textSize">@dimen/schat_small_text_size</item>
                <item name="android:textColor">@color/schat_view_details_color</item>

    </style>

    <style name="SChatItemTVTimedate">

        <item name="android:textSize">@dimen/schat_small_text_size</item>
    </style>

    <style name="SChatItemLL">
        <item name="android:paddingLeft">@dimen/schat_padding</item>
        <item name="android:paddingRight">@dimen/schat_padding</item>
    </style>

    <style name="SChatItemIcons">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/schat_item_icon_size</item>
        <item name="android:layout_height">@dimen/schat_item_icon_size</item>
        <item name="android:layout_marginTop">@dimen/schat_margin_top_bottom</item>


    </style>

</resources>