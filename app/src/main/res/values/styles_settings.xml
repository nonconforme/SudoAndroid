<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DIMENS -->
    <dimen name="ss_ll_padding">10dp</dimen>
    <dimen name="ss_tv_text_size">16dp</dimen>
    <dimen name="ss_tv_margin">10dp</dimen>
    <dimen name="ss_tv_line_height">2dp</dimen>
    <dimen name="ss_tv_changes_text_size">14dp</dimen>
    <dimen name="ss_btn_height">48dp</dimen>
    <dimen name="ss_btn_margin_right">2dp</dimen>
    <dimen name="ss_btn_margin_left">2dp</dimen>
    <dimen name="ss_btn_text_size">16dp</dimen>
    <!-- Dimen dialog-->
    <dimen name="sds_padding">10dp</dimen>
    <dimen name="sds_margin_top_bottom">12dp</dimen>
    <dimen name="sds_margin_left_righ">20dp</dimen>
    <dimen name="sds_btn_text_size">18dp</dimen>
    <dimen name="sds_btn_corner_radius">2dp</dimen>
    <dimen name="sds_btn_shadow_offset">3dp</dimen>

    <!-- end region -->

    <!-- INTEGER-->
    <integer name="ss_btn_weight">1</integer>
    <!-- end region -->

    <!-- COLORS -->
    <color name="ss_text_black">#000000</color>
    <color name="ss_tv_line_color">#9E9E9E</color>
    <color name="ss_tv_changes_color">#43A047</color>

    <color name="ss_btn_bloc_number_default">#f0c000</color>
    <color name="ss_btn_bloc_number_click">#f0f000</color>
    <color name="ss_btn_change_password_default">@color/colorPrimaryDark</color>
    <color name="ss_btn_change_password_click">@color/colorPrimary</color>
    <color name="sds_btn_selector_click">#BDBDBD</color>

    <color name="sds_dialog_bg">#E0E0E0</color>
    <color name="ss_bg_color">#E5E5E5</color>
    <color name="ss_changes_color">#666666</color>
    <color name="ss_btn_shadow">#dddddd</color>
    <!-- end region -->

    <!-- STYLES -->
    <style name="SSllStyle">


    </style>

    <style name="SStvPinStyle">
        <item name="android:text">@string/ss_tv_pin_text</item>
        <item name="android:textSize">@dimen/ss_tv_text_size</item>
        <item name="android:textColor">@color/ss_text_black</item>
        <item name="android:layout_margin">@dimen/ss_tv_margin</item>
    </style>

    <style name="SStvNotificatuonStyle">
        <item name="android:text">@string/ss_tv_notification_text</item>
        <item name="android:textSize">@dimen/ss_tv_text_size</item>
        <item name="android:textColor">@color/ss_text_black</item>
        <item name="android:layout_margin">@dimen/ss_tv_margin</item>
    </style>

    <style name="SStvChangesStyle">
        <item name="android:text">@string/ss_tv_changes_text</item>
        <item name="android:textSize">@dimen/ss_tv_changes_text_size</item>
        <item name="android:textColor">@color/ss_changes_color</item>
        <item name="android:layout_margin">@dimen/ss_tv_margin</item>
    </style>

    <style name="SSbtnSettings">
        <item name="android:layout_weight">@integer/ss_btn_weight</item>
        <item name="android:layout_height">@dimen/ss_btn_height</item>
        <item name="android:textSize">@dimen/ss_btn_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/ss_ll_padding</item>
        <item name="android:paddingRight">@dimen/ss_ll_padding</item>
        <item name="android:layout_marginTop">@dimen/sds_margin_top_bottom</item>
    </style>


    <style name="SStvLaneStyle">
        <item name="android:background">@color/ss_tv_line_color</item>
        <item name="android:layout_height">@dimen/ss_tv_line_height</item>
    </style>

    <!-- Style dialog-->
    <style name="SDSetNewPassStyle">
        <item name="android:padding">@dimen/sds_padding</item>
        <item name="android:hint">@string/ss_et_dialog_new_pass_hint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginBottom">@dimen/sds_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/sds_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/sds_margin_left_righ</item>
        <item name="android:layout_marginRight">@dimen/sds_margin_left_righ</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SDSetConfirmStyle">
        <item name="android:padding">@dimen/sds_padding</item>
        <item name="android:hint">@string/ss_et_dialog_confirm_hint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginBottom">@dimen/sds_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/sds_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/sds_margin_left_righ</item>
        <item name="android:layout_marginRight">@dimen/sds_margin_left_righ</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SDSbtnCancelStyle">
        <item name="android:text">@string/ss_btn_dialog_cancel</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sds_btn_text_size</item>
        <item name="android:background">@drawable/selector_btn_dialog_cancel</item>
    </style>

    <style name="SDSbtnSubmitStyle">
        <item name="android:textSize">@dimen/sds_btn_text_size</item>
        <item name="android:text">@string/ss_btn_dialog_submit</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">@color/ss_tv_changes_color</item>
        <item name="android:background">@drawable/selector_btn_dialog_submit</item>
    </style>


    <style name="SContainerStyle">

        <item name="android:layout_marginTop">@dimen/sds_margin_top_bottom</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/sds_padding</item>


    </style>
    <!-- end region -->
</resources>