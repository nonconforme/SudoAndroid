<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DIMENS -->
    <dimen name="sc_dialog_margin">8dp</dimen>
    <dimen name="sc_avatar_size">48dp</dimen>
    <dimen name="sc_margin_top_bottom">12dp</dimen>
    <dimen name="sc_margin_left_right">12dp</dimen>
    <dimen name="sc_margin_icon">12dp</dimen>
    <dimen name="sc_padding">12dp</dimen>
    <dimen name="sc_tv_padding_top_bottom">2dp</dimen>
    <dimen name="sc_text_size">18dp</dimen>
    <dimen name="sc_header_text_size">17dp</dimen>
    <dimen name="sc_header_padding">12dp</dimen>
    <dimen name="sc_number_text_size">16dp</dimen>
    <dimen name="sc_item_icon_size">32dp</dimen>


    <dimen name="avc_toolbar_height">198dp</dimen>
    <dimen name="avc_toolbar_btn_margin">25dp</dimen>
    <dimen name="avc_card_avatar_size">200dp</dimen>
    <dimen name="avc_card_name_text_size">40dp</dimen>
    <dimen name="avc_card_detailes_text_size">18dp</dimen>

    <dimen name="avc_margin">12dp</dimen>
    <dimen name="avc_margin_double">24dp</dimen>
    <dimen name="avc_change_avatar_size">75dp</dimen>


    <integer name="avc_phonenumber_maxlength">15</integer>
    <integer name="avc_transition_animation_speed">300</integer>
    <dimen name="avc_phonenumber_width">200dp</dimen>
    <dimen name="drawer_avatar_size">48dp</dimen>
    <dimen name="drawer_text_size">18dp</dimen>
    <dimen name="drawer_phone_text_size">16dp</dimen>
    <dimen name="drawer_padding">12dp</dimen>


    <!-- end region -->

    <!-- COLORS -->
    <color name="sc_phone_number_color">@android:color/darker_gray</color>
    <color name="colorDrawerHeaderBG">#333333</color>

    <!-- end region -->

    <!-- STYLES -->
    <!-- Style dialog add friend-->
    <style name="SCDialodETName">
        <item name="android:hint">@string/cf_dialod_hint_name</item>


    </style>


    <style name="SCDialogETNumber">
        <item name="android:hint">@string/cf_dialog_hint_number</item>
        <item name="android:layout_margin">@dimen/sc_dialog_margin</item>
        <item name="android:inputType">phone</item>
    </style>

    <!-- Style Contact Item-->

    <style name="SCContactsItemLLMainLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/sc_padding</item>
        <item name="android:paddingBottom">@dimen/sc_padding</item>

    </style>



    <style name="SCContactsItemEVAvatar">
        <item name="android:layout_width">@dimen/sc_avatar_size</item>
        <item name="android:layout_height">@dimen/sc_avatar_size</item>
        <item name="android:layout_marginLeft">@dimen/sc_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/sc_margin_left_right</item>
    </style>


    <style name="SCContactsNumber">

        <item name="android:textSize">@dimen/sc_number_text_size</item>
        <item name="android:textColor">@color/sc_phone_number_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/sc_tv_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/sc_tv_padding_top_bottom</item>
    </style>
    <style name="BlockNumberTV">

        <item name="android:textSize">@dimen/sc_number_text_size</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/sc_tv_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/sc_tv_padding_top_bottom</item>
    </style>
    <style name="SCContactsItemTVName">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sc_text_size</item>
        <item name="android:paddingBottom">@dimen/sc_tv_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/sc_tv_padding_top_bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="SCCItemIcons">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">@dimen/sc_item_icon_size</item>
        <item name="android:layout_height">@dimen/sc_item_icon_size</item>

        <item name="android:padding">6dp</item>
    </style>

    <!-- Style Contact List Header-->
    <style name="SCContactsListHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sc_header_text_size</item>
        <item name="android:padding">@dimen/sc_header_padding</item>
    </style>

    <!--Style Activity Contact View-->

    <style name="AVC_Card_RL">
        <item name="android:layout_height">@dimen/avc_toolbar_height</item>
    </style>

    <style name="AVC_Toolbar_btn">
        <item name="android:layout_margin">@dimen/avc_toolbar_btn_margin</item>
    </style>

    <style name="AVC_Card_Avatar_iv">
        <item name="android:layout_width">@dimen/avc_card_avatar_size</item>
        <item name="android:layout_height">@dimen/avc_card_avatar_size</item>
        <item name="android:layout_margin">@dimen/avc_margin</item>

    </style>

    <style name="AVC_Card_Name_tv">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/avc_card_name_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AVC_Detailes_Layout_LL">
        <item name="android:layout_margin">@dimen/avc_margin</item>
    </style>

    <style name="AVC_Detailes_SubItem_RL">
        <item name="android:layout_marginTop">@dimen/avc_margin</item>
        <item name="android:layout_marginBottom">@dimen/avc_margin_double</item>
    </style>

    <style name="AVC_Detailes_Subitem_Icon_IV">
        <item name="android:layout_width">@dimen/sc_item_icon_size</item>
        <item name="android:layout_height">@dimen/sc_item_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/avc_margin</item>
        <item name="android:layout_marginRight">@dimen/avc_margin_double</item>

    </style>

    <style name="AVC_Detailes_ChangeAvatar_Icon_IV">
        <item name="android:width">@dimen/avc_change_avatar_size</item>
        <item name="android:height">@dimen/avc_change_avatar_size</item>
        <item name="android:layout_marginLeft">@dimen/avc_margin</item>

    </style>

    <style name="AVC_Detailes_Button_Change">
        <item name="android:layout_marginLeft">@dimen/avc_margin_double</item>

    </style>

    <style name="AVC_Detailes_ET">
        <item name="android:textSize">@dimen/avc_card_detailes_text_size</item>
        <item name="android:layout_marginBottom">@dimen/avc_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <style name="AVC_Detailes_Phone_Number_ET">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/textGrey</item>

        <item name="android:textSize">@dimen/avc_card_detailes_text_size</item>
        <item name="android:layout_marginBottom">@dimen/avc_margin</item>
        <item name="android:maxLength">@integer/avc_phonenumber_maxlength</item>
        <item name="android:width">@dimen/avc_phonenumber_width</item>



    </style>
    <style name="AVC_Detailes_TV">
        <item name="android:textSize">@dimen/avc_card_detailes_text_size</item>
        <item name="android:layout_marginBottom">@dimen/avc_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/sc_padding</item>
    </style>
    <style name="AVC_NewNumber_TV">
        <item name="android:textSize">@dimen/avc_card_detailes_text_size</item>
        <item name="android:paddingLeft">@dimen/sc_padding</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="DrawerAvatar_IV">
        <item name="android:layout_width">@dimen/drawer_avatar_size</item>
        <item name="android:layout_height">@dimen/drawer_avatar_size</item>
        <item name="android:layout_margin">@dimen/sc_margin_left_right</item>
    </style>


    <style name="DrawerProfileName_TV">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DrawerProfilePhone_TV">
        <item name="android:textSize">@dimen/drawer_phone_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DrawerHeaderRL">
        <item name="android:paddingTop">@dimen/drawer_padding</item>
        <item name="android:paddingBottom">@dimen/drawer_padding</item>
        <item name="android:background">@color/colorDrawerHeaderBG</item>
    </style>


    <!-- end region -->
</resources>